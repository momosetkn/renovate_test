{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["gradle.properties"],
      "matchStrings": [
        "containerImage\\.[a-z0-9-_]+\\s*=\\s*(?<depName>[a-z0-9-_/]+):(?<currentValue>[a-zA-Z0-9._-]+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["ecspresso/images\\.libsonnet"],
      "matchStrings": [
        ":\\s*\"(?<depName>[a-z0-9-_/]+):(?<currentValue>[a-zA-Z0-9._-]+)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "groupName": "Kotlin & KSP",
      "matchManagers": ["gradle"],
      "matchPackagePatterns": [
        "org.jetbrains.kotlin",
        "com.google.devtools.ksp"
      ]
    },{
      "groupName": "Liquibase",
      "matchManagers": ["gradle"],
      "matchPackagePatterns": [
        "org.liquibase:liquibase-core",
        "io.github.momosetkn:liquibase-kotlin-starter-script"
      ]
    }
  ]
}
