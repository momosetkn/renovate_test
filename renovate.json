{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["gradle/libs.versions.toml"],
      "matchStrings": [
        "containerImage\\.[a-z0-9-_/]+\\s+=\\s\"(?<depName>[a-z0-9-_/]+):(?<currentValue>[a-zA-Z0-9._-]+)\""
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
